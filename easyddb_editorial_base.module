/**
 *  Implements hook_secure_permissions().
 */
function easyddb_editorial_base_secure_permissions($role) {
  $permissions = array(
    'anonymous user' => array(
      'view editorialbase panels terms',
    ),
    'authenticated user' => array(
      'view editorialbase panels terms',
    ),
    'administrators' => array(
      'view editorialbase panels terms',
    ),
    'editor' => array(
      'edit own editorialbase terms',
      'delete own editorialbase terms',
      'view editorialbase panels terms',
      'use editorialbase panels terms',
    ),
    'guest blogger' => array(
      'view editorialbase panels terms',
    ),
    'local administrator' => array(
      'administer editorial base',
      'edit editorialbase terms',
      'edit own editorialbase terms',
      'delete editorialbase terms',
      'delete own editorialbase terms',
      'view editorialbase panels terms',
      'use editorialbase panels terms',
    ),
    'local editor' => array(
      'view editorialbase panels terms',
    ),
    'provider' => array(
      'view editorialbase panels terms',
    ),
    'staff' => array(
      'view editorialbase panels terms',
    ),
  );
  if (isset($permissions[$role])) {
    return $permissions[$role];
  }
}
